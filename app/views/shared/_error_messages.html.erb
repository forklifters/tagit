<% if @user.errors.any? %>  <div id="error_explanation">    <div class="alert alert-error">      <%= t(:operation_failed_message) %>      <%= pluralize(@user.errors.count, t(:_error)) %>:    </div>    <ul>    <% @user.errors.full_messages.each do |msg| %>      <li>* <%= msg %></li>    <% end %>    </ul>  </div><% end %>