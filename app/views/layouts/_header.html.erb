<header class="navbar navbar-fixed-top">  <div class="navbar-inner">    <div class="container">      <div id="logo">        <img src="/assets/logo-25.png" />        <%= link_to t(:base_title), root_path, class: "logo_text" %>      </div>            <nav>        <ul class="nav pull-right">          <li class="<%= active(root_path) %>"><%= link_to t(:home), root_path %></li>          <% if signed_in? %>            <li class="<%= active(users_path) %>"><%= link_to t(:user).pluralize, users_path %></li>            <li id="fat-menu" class="dropdown">              <a href="#" class="dropdown-toggle" data-toggle="dropdown">               <%= current_user.name || current_user.username %> <b class="caret"></b>              </a>              <ul class="dropdown-menu">                <li class="<%= active(current_user) %>"><%= link_to t(:profile), current_user %></li>                <li class="<%= active(edit_user_path(current_user)) %>"><%= link_to t(:setting).pluralize, edit_user_path(current_user) %></li>                <li class="divider"></li>                <li>                  <%= link_to t(:sign_out), signout_path, method: "delete" %>                </li>              </ul>            </li>          <% else %>            <li class="<%= active(signin_path) %>"><%= link_to t(:sign_in), signin_path %></li>          <% end %>        </ul>      </nav>    </div>  </div></header>