<header class="navbar navbar-fixed-top">  <div class="navbar-inner">    <div class="container">      <!--<img src="/images/logo.png" />-->      <%= link_to t(:base_title), root_path, id: "logo" %>            <nav>        <ul class="nav pull-right">          <li><%= link_to t(:home), root_path %></li>          <% if signed_in? %>            <li><%= link_to t(:user).pluralize, current_user %></li>            <li id="fat-menu" class="dropdown">              <a href="#" class="dropdown-toggle" data-toggle="dropdown">               <%= current_user.name || current_user.username %> <b class="caret"></b>              </a>              <ul class="dropdown-menu">                <li><%= link_to t(:profile), current_user %></li>                <li><%= link_to t(:setting).pluralize, "#" %></li>                <li class="divider"></li>                <li>                  <%= link_to t(:sign_out), signout_path, method: "delete" %>                </li>              </ul>            </li>          <% else %>            <li><%= link_to t(:sign_in), signin_path %></li>          <% end %>        </ul>      </nav>    </div>  </div></header>