<%= form_for post, remote: true do |f| %>  <%= render "shared/error_messages", object: f.object %>    <%= f.text_field :title, class: "span6", placeholder: t(:title) %>  <%= f.text_field :tag_list, class: "span6", placeholder: t(:tag_list_placeholder), autocomplete: "off", onkeyup: "tagListTextBoxKeyUp(event, 'todo: tags_path');" %>  <%= f.text_area :content, rows: 3, placeholder: t(:new_post_message) %>    <%= f.submit t(:post_verb), disable_with: t(:post_verb), class: "btn btn-primary" %>    <% if local_assigns[:show_cancel] %>    <%= submit_tag t(:cancel), type: "button", class: "btn btn-primary", onclick: "$('#post_" + post.id.to_s + "').replaceWith('" + escape_javascript(render "posts/post", post: post) + "');" %>  <% else %>    <%= f.submit t(:search_verb), class: "btn btn-primary", disable_with: t(:search_verb) %>  <% end %><% end %>