//Create
<% unless @post.nil? %>
  $('#stream').prepend('<%= escape_javascript(render "posts/post", post: @post) %>');
  $('#post_<%= @post.id %>').toggle(false).animate({ height: 'toggle' }, constants.ANIMATION_DURATION);
  $('#new_post').find('input, textarea').val('');
  $('#new_post').find('textarea').focus();
<% end %>

//Search
<% unless @stream.nil? %>
  $('#stream').html('<%= escape_javascript(render "posts/posts", posts: @stream, path: root_path) %>');
<% end %>
