<div id="post_<%= post.id %>" class="post_item">  <%= link_to gravatar_for(post.user, :size => 50), post.user %>    <% if signed_in? %>  <div class="post">    <span>      <a href="<%= user_path(post.user) %>">        <span class="user_username"><%= post.user.name %></span>      </a>    </span>        <%= link_to(post, :title => post.created_at.to_s(:short), :class => "timestamp") do %>      <time class="timeago" datetime="<%= post.created_at.iso8601 %>">        <%= t(:posted_message) % { :time => time_ago_in_words(post.created_at) } %>      </time>    <% end %>        <div class="content">      <%= post.content %>    </div>  </div>    <div class="clear"></div></div>