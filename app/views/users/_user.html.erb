<div id="user_<%= user.id %>" class="user">  <div class="user_inner">  <% if signed_in? && current_user.admin? && !user.admin? %>    <%= link_to raw('<i class="icon-remove"></i>'), user, class: "pull-right", method: "delete", confirm: t(:confirm_delete_message), title: "#{t(:delete)} #{user.name}?" %>  <% end %>    <%= link_to user do %>    <%= gravatar_for user, size: 185 %>    <%= user.username %><br />    <%= user.name %><br />    <%= pluralize(user.posts.count, t(:_post)) %><br />  <% end %>      <div class="pull-left">      <%= render "relationships/following", user: user %>      <%= render "relationships/followers", user: user %>      <%= render "relationships/follow_form", user: user %>    </div>        <div class="clear"></div>  </div></div>