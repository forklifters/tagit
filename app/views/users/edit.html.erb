<% provide(:title, t(:setting).pluralize) %> <div class="row">  <div class="span6 offset3">    <a href="http://gravatar.com/emails" target="_blank"><%= gravatar_for @user, size: 300 %></a>    <div class="pull-left">      <%= form_for(@user) do |f| %>        <%= render "shared/error_messages" %>        <%= f.label :name %>        <%= f.text_field :name %>        <%= f.label :email %>        <%= f.text_field :email %>        <%= f.label :password %>        <%= f.password_field :password %>        <%= f.label :password_confirmation, "Confirm Password" %>        <%= f.password_field :password_confirmation %>        <%= f.submit t(:update_verb), class: "btn btn-large btn-primary" %>      <% end %>    </div>    <div class="clear"></div>  </div></div>